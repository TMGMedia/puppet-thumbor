[Unit]
Description=Thumbor service %I
After=network.target

[Service]
Type=simple
Restart=on-failure
StandardOutput=journal
PrivateTmp=true
PIDFile=/var/run/thumbor/%i.pid
WorkingDirectory=<%= scope.lookupvar('thumbor::apppath') %>
ExecStart=<%= scope.lookupvar('thumbor::apppath') -%>/bin/thumbor -c "<%= scope.lookupvar('thumbor::apppath') -%>/thumbor.conf" -k "<%= scope.lookupvar('thumbor::apppath') -%>/thumbor.key" -i "<%= scope.lookupvar('thumbor::host') -%>" -p "$i"
User=<%= scope.lookupvar('thumbor::user') %>
Group=<%= scope.lookupvar('thumbor::group') %>

[Install]
WantedBy=multi-user.target
